<resources>

    <!-- Base application theme. -->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--edited the following-->
        <item name="android:textColorPrimary">@color/colorTextDark</item>
        <item name="android:textColorSecondary">@color/colorTextLight</item>
    </style>

    <style name="ActivityStyle" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorTextDark</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorTextLight</item>
        <!--item name="android:textColorSecondary">@android:color/white</item>-->
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


</resources>

